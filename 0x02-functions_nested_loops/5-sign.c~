#include"holberton.h"

/**
 * print_sign - prints the sign of the integer
 * @n : prints an integer
(*
* Description: returns 1, 0 and -1
(* section header: Section description)*
* Return: 1 or 0 or -1 
*/

int print_sign (int n)
{
	if (n > 0)
	{
		_putchar('+');
		return (1);
	}
	if (n < 0)
	{
		_putchar('-');
		return (-1);
	}
	else
	{
		_putchar('0');
		return (0);
	}
}
